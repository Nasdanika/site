<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.nasdanika</groupId>
	<version>1.0.0</version>
	<artifactId>site</artifactId>
	<name>Nasdanika</name>
	<!-- <packaging>eclipse-repository</packaging>-->

	<pluginRepositories>
		<pluginRepository>
			<id>plugins-snapshot-local</id>
			<name>plugins-snapshot-local</name>
			<url>http://repo.spring.io/plugins-snapshot-local</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<layout>default</layout>
		</pluginRepository>
	</pluginRepositories>	
	
	<properties>
		<siteDir>${project.artifactId}/${project.version}</siteDir>
		<products.html.version>.</products.html.version> <!-- A trick for the old deployment approach. Update to version numbers. -->
		<products.server.version>.</products.server.version>
		 
		<products.config.version>.</products.config.version> 
		<products.codegen.version>.</products.codegen.version> 
		<products.codegen-ecore.version>.</products.codegen-ecore.version> 
		<products.codegen-ecore-web-ui.version>.</products.codegen-ecore-web-ui.version> 
		<products.workspace-wizard.version>.</products.workspace-wizard.version>
		 
		<products.help.version>.</products.help.version> 
		<products.docgen.version>.</products.docgen.version> 
		<products.docgen-ecore.version>.</products.docgen-ecore.version>
		 
		<products.presentation.version>.</products.presentation.version> 
		<products.story.version>.</products.story.version> 
		<products.webtest.version>.</products.webtest.version> 
		<products.webtest-model.version>.</products.webtest-model.version>
		 
		<products.tracker.version>.</products.tracker.version>
		 
		<products.maven-osgi.version>.</products.maven-osgi.version> 
		<products.third-party.version>.</products.third-party.version> 
		<products.tools.version>.</products.tools.version> 
		<products.bank.version>.</products.bank.version> 
		<products.guides.version>.</products.guides.version>
		
		<products.commons.version>.</products.commons.version> 
		 
	</properties>
	
	<build>
		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>3.0.0</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-site-plugin</artifactId>
			    <version>3.7.1</version>
			</plugin>

			<plugin>
				<groupId>org.springsource.ide</groupId>
				<artifactId>p2.composite.site.maven.plugin</artifactId>
				<version>1.0.0-SNAPSHOT</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<id>repository</id>
						<configuration>
							<name>Nasdanika Composite Repository</name>
							<target>${project.build.directory}/site/repository</target>
							<sites>
								<param>https://www.nasdanika.org/products/codegen/${products.codegen.version}/repository</param>
								<param>https://www.nasdanika.org/products/codegen-ecore/${products.codegen-ecore.version}/repository</param>
								<param>https://www.nasdanika.org/products/codegen-ecore-web-ui/${products.codegen-ecore-web-ui.version}/repository</param>
								<param>https://www.nasdanika.org/products/config/${products.config.version}/repository</param>
								<param>https://www.nasdanika.org/products/docgen/${products.docgen.version}/repository</param>
								<param>https://www.nasdanika.org/products/docgen-ecore/${products.docgen-ecore.version}/repository</param>
								<param>https://www.nasdanika.org/products/workspace-wizard/${products.workspace-wizard.version}/repository</param>
								<param>https://www.nasdanika.org/products/tools/${products.tools.version}/repository</param>
								<param>https://www.nasdanika.org/products/tracker/${products.tracker.version}/repository</param>
							</sites>
						</configuration>
					</execution>
				</executions>
			</plugin>
      			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>ftp</id>
						<phase>post-site</phase>
						<configuration>
							<target>
								<ftp passive="yes" action="mkdir" server="${env.FTP_SERVER}" userid="${env.FTP_USER}" password="${env.FTP_PASSWORD}" remotedir="/${siteDir}"/>
								
								<ftp passive="yes" action="delete" server="${env.FTP_SERVER}" userid="${env.FTP_USER}" password="${env.FTP_PASSWORD}" remotedir="/${siteDir}">
									<fileset defaultexcludes="false">
										<include name="**" />
									</fileset>
								</ftp>
							
								<ftp passive="yes" action="rmdir" server="${env.FTP_SERVER}" userid="${env.FTP_USER}" password="${env.FTP_PASSWORD}" remotedir="/${siteDir}">
									<fileset defaultexcludes="false">
										<include name="**" />
									</fileset>
								</ftp>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>commons-net</groupId>
						<artifactId>commons-net</artifactId>
						<version>1.4.1</version>
					</dependency>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-commons-net</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
			</plugin>			
		</plugins>
	</build>
	<distributionManagement>
		<site>
			<id>nasdanika-org</id>
			<url>ftp://${env.FTP_SERVER}/${siteDir}</url>
		</site>
	</distributionManagement>	
	
</project>
